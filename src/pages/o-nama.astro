          loading="lazy"
          alt="dejan"
        />
      </div>
    </div>
  </div>
  <!--end team -->
  <div class="max-w-full mx-auto rounded-3xl my-20">
    <div class="mt-16 sm:mt-20">
      <div
        class="-my-4 flex justify-center gap-5 overflow-hidden py-4 sm:gap-8"
      >
