---
import { readFile } from "fs/promises"
const all = await readFile("src/data/photos/photos.json")
const data = JSON.parse(all.toString())
const videoData = data.filter((items) => items.videos)
---

<div class="flex flex-col max-w-6xl mx-auto rounded-3xl my-20 gap-y-10">
  <h1 class="text-4xl text-white font-semibold text-center mb-20">
    Video Galerija
  </h1>

  {
    videoData[0].videos.map((video) => (
      <div class=" aspect-w-16 aspect-h-8 ">
        <iframe
          class="mx-auto w-full h-full overflow-hidden lg:w-4/6 lg:h-4/6"
          src={video}
        />
      </div>
    ))
  }
</div>
