---
import { config } from "@data/config";
import Icon from "astro-icon";
---

<footer
  class="w-full relative bg-fixed bg-cover bg-center flex justify-center items-center"
>
  <div class="w-full bg-transparent">
    <div class="px-4 mx-auto max-w-7xl md:px-8">
      <div class="grid gap-4 py-10 lg:py-6">
        <div class="grid grid-cols-1 col-span-2 justify-between sm:grid-cols-2">
          <div class="gap-4 w-full">
            <p class="text-gray-300 my-2 font-semibold text-base">
              Zapratite nas na društvenim mrežama:
            </p>
            {
              config.socials.map((social) => (
                <a
                  href={social.url}
                  target="_blank"
                  title={social.title}
                  class="text-gray-400 w-6 inline-flex transition m-1 duration-100 hover:text-gray-500 active:text-gray-600"
                >
                  <Icon name={social.icon} />
                </a>
              ))
            }
          </div>
        </div>

        <div class="text-sm text-center justify-center col-span-2 text-white">
          © {new Date().getFullYear()} - <a href="https://studioarsenov.com"
            >Copyright ©{new Date().getFullYear()} All rights reserved Studio Arsenov</a
          >
        </div>
      </div>
    </div>
  </div>
</footer>
