---
import { optimizeCloudinaryImage } from "@helpers/cloudinary.helper";
---

<style>
  div#slider {
    position: relative;
    height: 100%;
  }

  div#slider {
    background: transparent;
    font-family:
      Helvetica Neue,
      Helvetica,
      Arial,
      sans-serif;
    font-size: 14px;
    color: #000;
    margin: 0;
    padding: 0;
  }

  .swiper-container {
    width: 100%;
    height: 600px;
  }

  .swiper-slide {
    text-align: center;
    font-size: 18px;
    background-color: white;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  swiper-slide img {
    display: block;
    width: auto;
    height: 100%;
    object-fit: cover;
  }
</style>
<div class="testimonials">
  <div class="swiper">
    <div class="swiper-wrapper">
      <div class="swiper-slide">
        <img
          src={optimizeCloudinaryImage(
            "https://res.cloudinary.com/studioarsenov/image/upload/v1716911110/ss2_o1yo92.jpg",
            900
          )}
          alt="Swiper image 1"
          title="Swiper image 1"
          class="w-full h-[600px] object-contain"
          width="348.51"
          height="936"
          loading="eager"
        />
      </div>
      <div class="swiper-slide">
        <img
          src={optimizeCloudinaryImage(
            "https://res.cloudinary.com/studioarsenov/image/upload/v1716911123/ss1_gfohdk.jpg",
            900
          )}
          alt="Swiper image 2"
          title="Swiper image 2"
          class="w-full h-[600px] object-contain"
          width="348.51"
          height="936"
          loading="eager"
        />
      </div>
      <div class="swiper-slide">
        <img
          src={optimizeCloudinaryImage(
            "https://res.cloudinary.com/studioarsenov/image/upload/v1716911165/ss4_g9fqpl.jpg",
            900
          )}
          alt="Swiper image 3"
          title="Swiper image 3"
          class="w-full h-[600px] object-contain"
          width="348.51"
          height="936"
          loading="eager"
        />
      </div>
      <div class="swiper-slide">
        <img
          src={optimizeCloudinaryImage(
            "https://res.cloudinary.com/studioarsenov/image/upload/v1716911201/ss3_qhpdbu.jpg",
            900
          )}
          alt="Swiper image 4"
          title="Swiper image 4"
          class="w-full h-[600px] object-contain"
          width="348.51"
          height="936"
          loading="eager"
        />
      </div>
      <div class="swiper-slide">
        <img
          src="https://res.cloudinary.com/studioarsenov/image/upload/v1720001012/IMG-61353049cddcbadeea72d3b07b51cb21-V_fpmuan.jpg"
          alt="Swiper image 5"
